
{erl_opts,
 [
  {src_dirs, ["src"]}
 ]
}.

{deps_dir, "deps"}.
{deps,
 [
  {cowboy,  "1.*", {git, "https://github.com/extend/cowboy.git",    "1.0.1"}},
  {cowlib,  "1.*", {git, "https://github.com/ninenines/cowlib.git", "1.0.0"}},
  {ranch,   "1.*", {git, "https://github.com/ninenines/ranch.git",  "1.0.0"}}
 ]
}.
{escript_name, "trails"}.
{escript_incl_apps, [cowboy, cowlib, ranch]}.

{xref_warnings, true}.
{xref_checks,
  [
    undefined_function_calls
  , locals_not_used
  , deprecated_function_calls
  , deprecated_functions
  ]
}.
